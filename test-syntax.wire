// This is a Wire DSL example file for syntax highlighting testing
// Color indicators: keywords should be blue, components orange, strings green, etc.

project "Wire DSL Test Dashboard" {
  theme {
    density: "normal"
    spacing: "md"
    radius: "md"
    stroke: "normal"
    font: "base"
  }

  screen TestScreen {
    layout stack(direction: vertical, gap: md, padding: lg) {
      layout grid(columns: 3, gap: md) {
        cell span: 1 {
          layout card(padding: md, gap: md, radius: md, border: true) {
            component Heading text: "Test Card 2"
            component Text content: "Card with ID: test-card-1"
            component Badge text: "Active" variant: "success"
          }
        }
        
        cell span: 1 {
          layout card(padding: md, gap: md, radius: md, border: true) {
            component Heading text: "Button Test"
            component Text content: "Click me button"
            component Button text: "Click Me" variant: "primary"
          }
        }
        
        cell span: 1 {
          layout card(padding: md, gap: md, radius: md, border: true) {
            component Heading text: "Input Test"
            component Input label: "Test Input" placeholder: "Enter text"
            component Text content: "ID: test-input"
          }
        }
      }
    }
  }
  
  screen StackExample {
    layout stack(direction: vertical, gap: lg, padding: xl) {
      component Heading text: "Stack Layout Test"
      component Divider
      
      component Text content: "This demonstrates vertical stacking with consistent spacing"
      
      layout stack(direction: vertical, gap: md, padding: lg) {
        component Heading text: "Vertical Stack Section"
        component Text content: "Item 1 - Stack element"
        component Text content: "Item 2 - Stack element"
        component Text content: "Item 3 - Stack element"
        component Button text: "Submit" variant: "primary"
      }
    }
  }
  
  screen FormExample {
    layout stack(direction: vertical, gap: lg, padding: lg) {
      component Heading text: "Form Example"
      
      layout panel(padding: lg) {
        layout stack(direction: vertical, gap: md) {
          component Label text: "Contact Information"
          
          layout grid(columns: 2, gap: md) {
            cell span: 1 {
              component Input label: "Full Name" placeholder: "John Doe"
            }
            
            cell span: 1 {
              component Input label: "Email" placeholder: "john@example.com"
            }
            
            cell span: 2 {
              component Textarea label: "Message" placeholder: "Your message..." rows: 5
            }
          }
          
          layout stack(direction: horizontal, gap: md) {
            component Button text: "Send" variant: "primary"
            component Button text: "Cancel" variant: "secondary"
          }
        }
      }
    }
  }
}

/* 
  Block comment test
  Multiple lines should all be highlighted as comments
  This is useful for documenting complex sections
*/
