{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: esbuild",
      "type": "shell",
      "command": "npm",
      "args": ["run", "esbuild"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^error:",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": false,
          "beginsPattern": "^>",
          "endsPattern": "^Done|error"
        }
      },
      "isBackground": false
    },
    {
      "label": "npm: esbuild-watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "esbuild-watch"],
      "problemMatcher": "$tsc",
      "isBackground": true
    }
  ]
}
